<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Blog</title>
</head>
<body>
    <div class="container">
        <!-- blog settings -->
        <h1 class="text-center"><%= edit.title %></h1>
        <h2 class="text-center"><%= edit.subtitle %></h1>
        <h3 class="text-center"><small><%= edit.author %></small></h1>
        
        <!-- article data -->
        <div class="card text-center mt-3">
            <div class="card-body">
                <h4 class="card-title"><%= article.title %></h1>
                <h5 class="card-subtitle mb-2 text-muted"><%= article.subtitle %></h5>
                <p class="card-text"><%= article.published %></p>
                <p class="card-text"><%= article.body %></p>
            </div>
        </div>

        <!-- article likes -->
        <h6 class="mt-3">Likes: <%= likes.likes %></h6>
        <form method="POST">
            <button type="submit" class="btn btn-success">Like</button>
        </form>

        <!-- article comments -->
        <h4 class="mt-3">Comments</h4>
        <div class="card">
            <div class="card-body">
                <form method="POST">
                    <label for="comment" class="card-text">Comment text:</label> 
                    <input id="comment" type="text" name="comment" placeholder="Comment" class="form-control" required>
                    <button type="submit" class="btn btn-secondary mt-3 mb-3">Add Comment</button>
                </form>
                
                <% comments.forEach(function(comment){ %>
                    <div class="p-3 text-dark bg-light border border-1">
                        <p class="card-text"><%= comment.text %></p>
                        <p class="card-text"><%= comment.date %></p>
                    </div>
                <% }) %>
            </div>
        </div>

        <!-- return to home page -->
        <a href="/user/home" class="btn btn-primary mt-3 mb-3">Back to Home</a>
    </div>
</body>
</html>